{
  "name": "course-review-server",
  "version": "1.0.0",
  "description": "Backend server for Course Review & Recommendation Platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seedUnifiedData.js",
    "seed:categories": "node seedUnifiedData.js --categories-only",
    "seed:courses": "node seedUnifiedData.js --courses-only",
    "seed:data": "node seedData.js",
    "generate:secrets": "node ../generate-secrets.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:realtime": "node testRealtimeTracking.js",
    "test:db": "node testDatabase.js"
  },
  "keywords": ["nodejs", "express", "mongodb", "course-review", "api"],
  "author": "Chiranjeevi PK",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  }
}